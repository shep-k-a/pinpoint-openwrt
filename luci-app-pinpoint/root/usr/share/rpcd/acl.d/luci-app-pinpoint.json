{
	"luci-app-pinpoint": {
		"description": "Grant access to PinPoint VPN routing",
		"read": {
			"uci": ["pinpoint"],
			"file": {
				"/etc/config/pinpoint": ["read"],
				"/opt/pinpoint/data/*": ["read"],
				"/tmp/pinpoint/*": ["read"],
				"/etc/sing-box/*": ["read"]
			},
			"ubus": {
				"luci.pinpoint": [
					"status",
					"services",
					"devices",
					"tunnels",
					"custom_services",
					"get_settings",
					"system_info",
					"health_check"
				]
			}
		},
		"write": {
			"uci": ["pinpoint"],
			"file": {
				"/etc/config/pinpoint": ["write"],
				"/opt/pinpoint/data/*": ["write"],
				"/etc/sing-box/*": ["write"]
			},
			"ubus": {
				"luci.pinpoint": [
					"set_service",
					"set_device",
					"apply",
					"restart",
					"add_subscription",
					"update_subscriptions",
					"set_active_tunnel",
					"add_custom_service",
					"delete_custom_service",
					"toggle_custom_service",
					"save_settings"
				]
			}
		}
	}
}
