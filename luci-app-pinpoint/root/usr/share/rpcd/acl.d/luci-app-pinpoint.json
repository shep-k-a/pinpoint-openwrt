{
	"luci-app-pinpoint": {
		"description": "Grant access to PinPoint VPN routing",
		"read": {
			"uci": ["pinpoint"],
			"file": {
				"/etc/config/pinpoint": ["read"],
				"/opt/pinpoint/data/*": ["read"],
				"/tmp/pinpoint/*": ["read"],
				"/tmp/dhcp.leases": ["read"],
				"/proc/net/arp": ["read"],
				"/etc/sing-box/*": ["read"]
			},
			"ubus": {
				"luci.pinpoint": [
					"status",
					"services",
					"devices",
					"tunnels",
					"custom_services",
					"get_settings",
					"system_info",
					"health_check",
					"get_logs",
					"network_hosts",
					"test_domain",
					"groups",
					"service_routes",
					"adblock_status",
					"export_config",
					"update_lists"
				]
			}
		},
		"write": {
			"uci": ["pinpoint"],
			"file": {
				"/etc/config/pinpoint": ["write"],
				"/opt/pinpoint/data/*": ["write"],
				"/etc/sing-box/*": ["write"],
				"/tmp/dnsmasq.d/*": ["write"]
			},
			"ubus": {
				"luci.pinpoint": [
					"set_service",
					"set_device",
					"apply",
					"restart",
					"add_subscription",
					"update_subscriptions",
					"set_active_tunnel",
					"add_custom_service",
					"delete_custom_service",
					"toggle_custom_service",
					"save_settings",
					"update_lists",
					"import_link",
					"import_batch",
					"delete_subscription",
					"edit_subscription",
					"delete_tunnel",
					"add_device",
					"delete_device",
					"add_group",
					"delete_group",
					"set_service_route",
					"toggle_adblock",
					"update_adblock",
					"import_config"
				]
			}
		}
	}
}
